@model  IEnumerable<MyVitarak.Models.SupplierDetails>
@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html

<table class="table table-bordered" >
    <thead>
        <tr>
           
            <th scope="col"> Vendor Name <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Contact Person <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Mobile Number<i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">EmailID <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">IsActive <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Action<i class="fa fa-angle-down" aria-hidden="true"></i></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="form-check height20Pixel">
                        <input class="form-check-input" type="checkbox" id="one">
                        <label class="form-check-label verticalAlignTop" for="one"> &nbsp;@item.VendorName</label>
                    </div>
                </td>
                <td><strong>@item.ContactPerson</strong></td>
                <td>@item.PersonMobileNo </td>
                <td>@item.EmailID</td>
                <td>@item.IsActive</td>
                <td>
                    <a href="@Url.Action("FetchSupplierForUpdate", "Master",new { VendorID = item.VendorID})" data-toggle="modal" data-target="#mdlEditSupplier"><i class="fa fa-edit">Action</i></a>
                </td>

            </tr>

        }

    </tbody>
</table>


