
@model  IEnumerable<MyVitarak.Models.EmployeeDetails>

@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">First Name<i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Address <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Area <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Mobile <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Edit <i class="fa fa-angle-down" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    <div class="form-check height20Pixel">
                        <input class="form-check-input" type="checkbox" id="one">
                        <label class="form-check-label verticalAlignTop" for="one"> &nbsp;@item.EmployeeName</label>
                    </div>
                </td>

                <td>@item.Address</td>
                <td>@item.Area</td>
                <td>@item.Mobile</td>


                <td><a href="@Url.Action("EditEmployee", "Master", new { @EmployeeID = @item.EmployeeID })" data-toggle="modal" data-target="#mdlEditEmployee"><i class="fa fa-edit">Action</i></a></td>
                @*<td id="del" onclick="deleteItem()">Delete</td>*@
            </tr>

        }


    </tbody>
</table>



<script>
    function deleteItem() {
        if (confirm("Are you sure?")) {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/Master/DeleteEmployee',

                data:
                {

                    EmployeeID: $("#EmployeeID").val(),

                },
                success: function (da) {



                },

                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
        }
        return false;
    }
</script>