<script>

    $(document).ready(function () {

        function countChecked() {
            var a = $("input:checked").length;
            $("#boxes").text(a);
        }
        $(document).on("click", "#one", function () {
           
            countChecked();
        })
        $(document).on("click", "#selectAll", function () {
            
            var check = $(this).prop("checked");
            if (check) {
                $(':checkbox').each(function () {
                    var b = $("input:checkbox").length;
                    b = b - 1;
                    $("#boxes").text(b);
                });
            }
            else {
                $("#boxes").text(0);
            }
           
        })
    });

        
    $('#CI').addClass("active");
    $("#selectAll").change(function () {

        $('input:checkbox').not(this).prop('checked', this.checked);
    });
    var str = window.location.href;
    var lastLetter = str[str.length], i, temp;
    var con = "";

    for (i = 0; i < str.length; i++) {
        if (str[i] == '=') {
            myfun(i);
            break;
        }
    }

    function myfun(temp) {

        temp = temp + 1;
        for (i = temp; i < [str.length]; i++) {

            con = con + str[i];
        }
        parseInt(con);

    }
     $('#txtName').keyup(function () {
         $("#boxes").text(0);
                $('#pageLoader').show();

                $.ajax({
                    url: "@Url.Action("LoadDataCustomer", "Master")",
                    contentType: "application/json",
                    data: JSON.stringify({ page: con, Name: $('#txtName').val(), area: $('#AreaID').val()  }),
                    dataType: "text",
                    type: "POST",
                    async: true,
                    success: function (data) {
                        $('#grid1').html(data);

                    },
                    error: function (data) {
                        $('#pageLoader').hide();
                    },
                    complete: function () {
                        $('#pageLoader').hide();
                    }
                });

    });

     $('#AreaID').on('change', function () {
         $("#boxes").text(0);
     $.ajax({
            url: "@Url.Action("LoadDataCustomer", "Master")",
         contentType: "application/json",
         data: JSON.stringify({ page: con, Name: $('#txtName').val(), area: $('#AreaID').val()  }),
            dataType: "text",
            type: "POST",
            async: true,
            success: function (data) {
                $('#grid1').html(data);
                window.location.reload();

            },
            error: function (data) {

            },
         complete: function () {

         }

        });
    });
         

</script>