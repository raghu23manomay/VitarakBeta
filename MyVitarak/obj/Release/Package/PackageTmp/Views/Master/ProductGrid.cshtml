@model  IEnumerable<MyVitarak.Models.ProductDetails>
@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html

<table class="table table-bordered" style="margin-top:-20px;">
    <thead>
        <tr>
            <th scope="col">Product Name <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Sequence <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Brand Name <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Crate Size <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Gst % <i class="fa fa-angle-down" aria-hidden="true"></i></th>
            <th scope="col">Action<i class="fa fa-angle-down" aria-hidden="true"></i></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="form-check height20Pixel">
                    <input class="form-check-input" type="checkbox" id="one">
                    <label class="form-check-label verticalAlignTop" for="one"> &nbsp;@item.Product</label>
                </div>
            </td>
            <td><strong>@item.ProductBrandID</strong></td>
            <td>No Brand </td>
            <td>@item.CrateSize</td>
            <td>@item.GST</td>
            <td>
                <a href="@Url.Action("FetchProductForUpdate", "Master",new { @ProductID = item.ProductID})" data-toggle="modal" data-target="#mdlEditProduct"><i class="fa fa-edit">Action</i></a>
            </td>

        </tr>

        }

    </tbody>
</table>

